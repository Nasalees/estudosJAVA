		int opcao = sc.nextInt();
		switch(opcao) {
		case 1:
			System.out.println("Digite o seu nome: ");
			String nome = sc.nextLine();
			
			System.out.println("Digite o sua idade: ");
			String idade = sc.nextInt();
			
			
			
			agenda.armazenaPessoa(null, opcao, opcao);
		}
	}
}
