import java.util.Scanner;

public class Agenda implements IAgenda {
	private int qtdPessoas = 0;
	private int informacoes[] = new int[10];
	private int opcao;
	
	private List<Pessoa> pessoas;

	public Agenda() {
		this.pessoas = new ArrayList<>();
	}
	
